{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="row mt-2 mb-2">
                    <div class="col-md-6">
                        <h2>{{ 'app.cart.title'|trans }}</h2>
                    </div>
                    <div class="col-md-6 float-md-right text-sm-right">
                        {{ form_start(clearForm) }}
                            {{ form_widget(clearForm.id) }}
                            {{ form_widget(clearForm.submit) }}
                        {{ form_end(clearForm) }}
                    </div>
                </div>
                <div class="table-responsive-lg">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>{{ 'app.cart.table.column.product'|trans }}</th>
                        <th>{{ 'db.product.gongshi'|trans }}</th>
                        <th>{{ 'app.cart.table.column.quantity'|trans }}</th>
                        <th>{{ 'db.product.priceTotal'|trans }}</th>
                        <th>{{ 'app.default.remove'|trans }}</th>
                    </tr>
                    </thead>                    
                    <tbody>
                    {% for item in orderFactory.items %}
                        <tr>
                            <td>{{ item.product.title }}</td>
                            <td>{{ item.product.price }} </td>
                            <td class="text-sm-center">
                                {{ render(controller('App\\Controller\\CartController::setItemQuantityForm', {'id' : item.id})) }}
                            </td>
                            <td>
                                {{ item.priceTotal }}
                            </td>
                            <td>
                                {{ render(controller('App\\Controller\\CartController::removeItemForm', {'id' : item.id})) }}
                            </td>
                        </tr>
                    {% endfor %}

                    <tfoot>
                   <tr>
                        <td colspan='2' class='text-left'>总计<span class="badge badge-warning">{{ order.itemsSingle }}</span></td>                         

                       
                        <td>
                            {{ order.itemsTotal}}
                        </td>
                         <td colspan='2'>
                            {{ order.priceTotal}}
                        </td>
                    </tr>
                    
                    
                       
       </tfoot>

                   

                    </tbody>
                </table>
                </div>

                

            </div>
        </div>
    </div>
{% endblock %}