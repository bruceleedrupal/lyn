{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>名称</th>
                <th>{{ 'db.product.gongshi'|trans }}</th>               
                <th  class="d-none d-sm-table-cell">操作</th>
                <th class='text-center'>添加</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>               
                <td><a href="{{ path('product_show', {'id': product.id}) }}">{{ product.title }}</a></td>
                <td>{{ product.price }}</td>               
                <td class="d-none d-sm-table-cell">
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-sm btn-default"><i class="fa fa-eye mr-1"></i>展示</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-sm btn-secondary"><i class="fa fa-edit  mr-1" aria-hidden="true"></i>编辑</a>
                </td>
               <td class='text-center'>
                  {{ render(controller('App\\Controller\\CartController::addItemForm', {'id' : product.id})) }}
               </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}" class='btn btn-success'>{{ 'db.product.create'|trans }}</a>
{% endblock %}
