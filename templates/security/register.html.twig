{% extends 'base.html.twig' %}

{% block title %}登录{% endblock %}
{%  block body_id 'login' %}
{% block body %}
<div class='col-xs-12 col-sm-6 offset-sm-3'>
<div class="login loginnormal">
<div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">注册</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(registrationForm,{attr:{class:'form-horizontal'}}) }}
                {% if not registrationForm.vars.valid %}
                
            
                {% for child in registrationForm.children %}
                    {# Display the errors of the form item #}
                    {%for error in child.vars.errors%}
                        <div class="alert alert-danger m-1">{{error.message|trans}}</div>
                    {%endfor%}
                {%endfor%}
            
                {%endif%}
                <div class="card-body">                  
                  <div class="form-group row">
                    <label for=""inputUname"" class="col-sm-2 col-form-label">用户名</label>
                    <div class="col-sm-10">
                       {{ form_widget(registrationForm.username) }}
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">密码</label>
                    <div class="col-sm-10">
                      {{ form_widget(registrationForm.plainPassword) }} 
      </div>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-info">注册</button>
                  <a href="{{ path('app_login') }}" class='btn btn-info float-right'>已有帐号</a>
                </div>
                <!-- /.card-footer -->
              {{ form_end(registrationForm) }}
 </div>






</div>
</div>
{% endblock %}
