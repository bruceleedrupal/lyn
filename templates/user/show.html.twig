{% extends 'base.html.twig' %}

{% block title %}查看用户:{{ user.username }}{% endblock %}


{%  block content_header %}
    <div class="container-fluid">
        <div class="row">
          <div class="col-sm-12">
            <h4>查看用户:{{ user.username }}</h4>
          </div>
        </div>
 </div>
{% endblock  %}


{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>用户名</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>角色</th>
                <td> {% for role in user.displayRoles %}                    
                     {{ role|trans }}<br/>                        
                    {% endfor %}
                </td>
            </tr>           
            <tr>
                <th>最近登录</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>创建时间</th>
                <td>{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
